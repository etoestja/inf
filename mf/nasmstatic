CFILE=main
TARGET=solution
LIBRARY=library

all: lib$(LIBRARY).a
$(TARGET): lib$(LIBRARY).a $(CFILE).c
	gcc -m32 -L. $(CFILE).c -l$(LIBRARY) -o $(TARGET)
lib%.a: %.o
	ar rcs $@ $<
$(LIBRARY).o: $(LIBRARY).asm
	nasm -felf $(LIBRARY).asm
clean:
	rm -rf *~
	rm -rf $(LIBRARY).o
	rm -rf lib$(LIBRARY).a
	rm -rf $(TARGET)
